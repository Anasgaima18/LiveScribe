# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/livekit-video-call
# For MongoDB Atlas: mongodb+srv://<username>:<password>@cluster.mongodb.net/livekit-video-call

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRE=7d

# LiveKit Configuration
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret
LIVEKIT_URL=wss://your-livekit-url.livekit.cloud

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Sarvam AI Realtime Transcription (Optional)
# Set these to enable realtime STT via Sarvam AI
SARVAM_API_KEY=your_sarvam_api_key_here
SARVAM_REALTIME_URL=wss://your-sarvam-realtime-endpoint
TRANSCRIPTION_PROVIDER=sarvam

# Google Translate API (for multilingual support)
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here

# Cloud Storage Configuration
CLOUD_STORAGE_PROVIDER=aws  # Options: aws, azure, cloudinary

# AWS S3 Configuration (if using aws)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=livekit-recordings

# Azure Blob Storage Configuration (if using azure)
AZURE_STORAGE_CONNECTION_STRING=your_azure_connection_string
AZURE_CONTAINER_NAME=recordings

# Cloudinary Configuration (if using cloudinary)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
